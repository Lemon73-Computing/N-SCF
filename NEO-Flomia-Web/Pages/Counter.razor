@page "/counter"

<PageTitle>カウンター | N-SCF(Web版)</PageTitle>

<h1>カウンター</h1>

<p role="status">現在のカウント数: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">クリック</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
